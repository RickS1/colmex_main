  </div>
  <div class="field">
    <%= f.label :liga %><br>
    <%= f.text_field :liga %>
  </div>
  <div class="field">
    <%= f.label :programa %><br>
    <%= f.select(:programa, []), {}, {:onchange => "ocultarTipoCurso()"}) %>
  </div>
  <div class="field" id="tipo_curso" style="display:none;">
    <%= f.label :tipo_curso %><br>
