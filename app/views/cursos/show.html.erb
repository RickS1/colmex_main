<% if admin_signed_in? %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @curso.titulo %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @curso.descripcion %>
</p>

<p>
  <strong>Fecha inicio conv:</strong>
  <%= @curso.fecha_inicio_conv %>
</p>

<p>
  <strong>Fecha fin conv:</strong>
  <%= @curso.fecha_fin_conv %>
</p>

<p>
  <strong>Fecha inicio clases:</strong>
  <%= @curso.fecha_inicio_clases %>
</p>

<p>
  <strong>Foto:</strong>
  <%= image_tag(@curso.foto.url) %>
</p>

<p>
  <strong>Liga:</strong>
  <%= @curso.liga %>
</p>

<p>
  <strong>Tipo curso:</strong>
  <%= @curso.tipo_curso %>
</p>

<p>
  <strong>Tipo curso en línea:</strong>
  <%= @curso.tipo_curso_linea || '<No es curso en línea>' %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @curso.tags.downcase.split(',').presence || "<Sin tags>" %>
</p>

<%= link_to 'Edit', edit_curso_path(@curso) %> |
<%= link_to 'Back', cursos_path %>

<% end %>
