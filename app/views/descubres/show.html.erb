<% if admin_signed_in? %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @descubre.titulo %>
</p>

<p>
  <strong>Liga:</strong>
  <%= @descubre.liga %>
</p>

<p>
  <strong>Contenido:</strong>
  <%= @descubre.contenido %>
</p>

<p>
  <strong>Fecha de publicación:</strong>
  <%= @descubre.fecha_publicacion %>
</p>

<p>
  <strong>Fecha de despublicación:</strong>
  <%= @descubre.fecha_limite_pub %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @descubre.tags.downcase.split(',').presence || "<Sin tags>" %>
</p>

<%= link_to 'Edit', edit_descubre_path(@descubre) %> |
<%= link_to 'Back', descubres_path %>

<% end %>
