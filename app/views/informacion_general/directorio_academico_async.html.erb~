<script type="text/javascript">
$.ajax({
	url: "<%= rec_doc_path %>",
	type: "GET",
	dataType: "json",
	success: function(data){
		window.docentes = clone(JSON.parse(data["acs"]));
		agregarVisible(docentes);
		datum = crossfilter(docentes);
		window.academicosPorNombre = datum.dimension(function(d){ return limpiarPuntuacion(d["nombre"].toLowerCase())});
		window.academicosPorLinea = datum.dimension(function(d){ return limpiarPuntuacion(d["libres"].join(" ").toLowerCase()/* + " " + d["conts"].join(" ").toLowerCase()*/)});
//academicosPorTema = data.dimension(function(d){return limpiarPuntuacion(d["conts"].join(" ").toLowerCase() + " " + d["libres"].join(" ").toLowerCase())});
		window.academicosPorCentro = datum.dimension(function(d){ return d["adscripcion"]});
		academicosPorInicial = datum.dimension(function(d){ return d["inicial"]});
		window.console.log(data);
		$("#cont_ac").html("<%= j render partial: 'recuperar_docentes', docentes: @ac_json %>");
	}
});
</script>
