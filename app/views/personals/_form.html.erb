    <%= f.label :seccion %><br>
<%= f.select(:seccion, options_for_select([['Junta de Gobierno','Junta'],['Presidencia','Presidencia'],['Centros de Estudios','Centros'],['Administración','Administración'],['Biblioteca','Biblioteca'],['Áreas operativas','Operativas']], @personal.seccion || 'Junta')) %>
