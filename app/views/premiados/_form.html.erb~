<%= form_for(@premiado) do |f| %>
  <% if @premiado.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@premiado.errors.count, "error") %> prohibited this premiado from being saved:</h2>

      <ul>
      <% @premiado.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :tipo %><br>
    <%= f.select(:tipo, options_for_select([['Institucional','Institucional'],['Profesor emÃ©rito','Emerito'],['Profesor-Investigador','Investigador'],['Estudiante','Estudiante'],['Egresado','Egresado']])) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
