<% if admin_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Listing Premiados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @premiados.each do |premiado| %>
      <tr>
        <td><%= premiado.nombre %></td>
        <td><%= premiado.descripcion %></td>
        <td><%= premiado.tipo %></td>
        <td><%= link_to 'Show', premiado %></td>
        <td><%= link_to 'Edit', edit_premiado_path(premiado) %></td>
        <td><%= link_to 'Destroy', premiado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Premiado', new_premiado_path %>
<br>
<%= link_to "Regresar", panel_path %>

<% end %>
