	<div class="row">
		<div id="titulo-sobre">Sobre el Colegio
		</div>
		<div id="img-menus-sobre">
			<a href=<%= image_url("sobre.png") %> data-uk-lightbox data-lightbox-type="image">
				<%= image_tag("sobre.png", :class => "img-muestra") %>
