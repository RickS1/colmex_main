<%= render 'principal/barra' %>
<div class="container-fluid" id="resto-cuerpo">
	<div id="cuerpo" class="principal-chica uk-block-large">
	<div class="uk-width-1-1">
    <span class="titulo-grande">Doctorados</span><br>
    <div class="uk-container-center"><img src=<%= image_url("doctorados-grande.jpg") %> alt="Historia de El Colegio de México"></div>
    <p>&nbsp;</p>
    <!--          Aquí empiezan las licenciaturas          -->


	<% @doctorados.each do |doc| %>
    <h2 class="vino uk-margin-large-top">Doctorado en <%= doc.titulo %></h2>
    <div class="uk-grid uk-grid-large">
    <div class="uk-width-large-3-5 uk-text-left">
    <p><%= doc.descripcion %></p>
    <% if !doc.liga.nil? %>
      <a href=<%= doc.liga %> target="_blank" class="ver-mas uk-margin-large-bottom uk-button-small">Más información</a>
    <% end %>
    </div>
    <div class="uk-width-large-2-5">
    <h3 class="vino uk-margin-bottom-remove">Inicio de la promoción</h3>
    <h4 class="uk-margin-top-remove"><%= l(doc.fecha_inicio_clases, format: :mes_anio ).capitalize %></h4>
    <h3 class="vino uk-margin-bottom-remove">Próxima convocatoria</h3>
    <h4 class="uk-margin-top-remove">
			<% if doc.fecha_inicio_conv == doc.fecha_fin_conv %>
				<%= l(doc.fecha_inicio_conv, format: :mes_anio ).capitalize %>
			<% else %>
				<%= "Abierta hasta " + l(doc.fecha_fin_conv, format: :long) %>
			<% end %>
		</h4>
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <div class="addthis_inline_share_toolbox" data-url=<%= doc.liga %> data-title="<%= "Doctorado en " + doc.titulo %>"></div>
    </div>
    </div>
	<% end %>


    </div>
	
	</div>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57bb682464651c22"></script>
<%= render 'principal/footer'%>
