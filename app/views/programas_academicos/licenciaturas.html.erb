<%= render 'principal/barra' %>
<div class="container-fluid" id="resto-cuerpo">
	<div id="cuerpo" class="principal-chica uk-block-large">
		
<div class="uk-width-1-1">
    <span class="titulo-grande">Licenciaturas</span><br>
    <div class="uk-container-center"><img src=<%= image_url("licenciaturas-grande.jpg") %> alt="Historia de El Colegio de México"></div>
    <p>&nbsp;</p>

    <!--          Aquí empiezan las licenciaturas          -->
    <% @licenciaturas.each do |lic| %>
    <h2 class="vino">Licenciatura en <%= lic.titulo %></h2>
    <div class="uk-grid uk-grid-large">
    <div class="uk-width-large-3-5 uk-text-left">
    <p><%= lic.descripcion %></p>
    <a href=<%= lic.liga %> target="_blank" class="ver-mas uk-margin-large-bottom uk-button-small">Más información</a>
    </div>
    <div class="uk-width-large-2-5">
    <h3 class="vino uk-margin-bottom-remove">Inicio de la promoción</h3>
    <h4 class="uk-margin-top-remove"><%= l(lic.fecha_inicio_clases, format: :mes_anio).capitalize %></h4>
    <h3 class="vino uk-margin-bottom-remove">Próxima convocatoria</h3>
    <h4 class="uk-margin-top-remove"><%= l(lic.fecha_inicio_conv, format: :mes_anio).capitalize %></h4>
    <div class="addthis_inline_share_toolbox"></div>
    </div>
    </div>
    <% end %>

    <!--          Aquí empiezan las licenciaturas          -->
    </div>

	</div>
