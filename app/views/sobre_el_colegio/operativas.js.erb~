$(".link-sobre .leave_img").css("display", "inline");
$(".link-sobre .hover_img").css("display", "none");
$(".link-sobre").css("color", "#4E4E4E");
$(".link-sobre").mouseleave(function(){$(this).css("color", "#4E4E4E")});
$(".link-sobre").hover(function(){$(this).css("color", "#7E3355")});
$(".link-sobre").click(function(){$(this).css("color", "#7E3355")});
$("#operativas-link .leave_img").css('display','none');
$("#operativas-link .hover_img").css('display','inline');
$("#operativas-link").css("color", "#7E3355");

$("#titulo-render").html("<%= t('sobre.autoridades.operativas') %>");
$("#autoridades-render").html("<%= j render :partial => 'operativas' %>");
